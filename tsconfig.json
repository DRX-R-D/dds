{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
